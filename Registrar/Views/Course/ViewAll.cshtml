@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-sm-12">
        <h3>Current Courses</h3>
        @{
            foreach (var course in Model)
            {
                <h4><a href="/course/@course.Id/details">@course.Name</a></h4>
                <a href="/course/@course.Id/update" class="btn btn-primary">Edit</a>
                <form method="post" action="/course/@course.Id/delete"><button type="submit" class="btn btn-danger">Delete</button></form>
                <hr />
            }
        }
    </div>
</div>