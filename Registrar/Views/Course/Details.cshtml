@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-sm-12">
        <h3>@Model.Name:</h3>
        <hr /><br />
        <h4>@Model.Name</h4>
        <h5><strong>Students Enrolled</strong></h5>
        @foreach(var student in Model.GetStudents())
        {
            <p><a href="~/student/@student.Id/details">@student.Name</a></p>
        }
        <a href="/course/@Model.Id/update" class="btn btn-primary">Edit</a>
        <form method="post" class="inline-form-button" action="/course/@Model.Id/delete"><button type="submit" class="btn btn-danger">Delete</button></form>
        <hr />
    </div>
</div>