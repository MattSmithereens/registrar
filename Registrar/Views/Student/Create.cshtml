@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-sm-12">
        <form action="/new-student" method="post">
            <div class="form-group">
                <label for="name">Enter a student name</label>
                <input type="text" id="name" name="name" />
                <label for="enrollment">Select Enrollment Date</label>
                <input type="date" id="enrollment" name="enrollment" />                
            </div>
            <div class="form-group">
                <label for="course">Select Courses:</label>
                <select name="course" required>
                    @foreach(var course in Model)
                    {
                        <option value="@course.Id">@course.Name</option>
                    }
                </select>
            </div>
            <button class="btn btn-primary" type="submit">Add</button>
            <a href="/" class="btn btn-primary">Return to Home</a>
        </form>
    </div>
</div>