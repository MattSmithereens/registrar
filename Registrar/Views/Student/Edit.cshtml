@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-sm-12">
        <h2><a href="/student/@Model.Id/details">@Model.Name</a></h2>
        <hr />
        <form action="/student/@Model.Id/update" method="post">
            <div class="form-group">
                <label for="newName">Student Name:</label>
                <input type="text" name="newName" value="@Model.Name" required>
            </div>
            <div class="form-group">
                <label for="newCourse">Select Course</label>
                <select name="newCourse" required>
                    @foreach(var course in Model.GetAllCourses())
                    {
                        <option value="@course.Id">@course.Name</option>
                    }
                </select>
            </div>
            
            <button type="submit" class="btn btn-primary">Edit</button>
        </form>
        <form class="inline-form-button" method="post" action="/student/@Model.Id/delete"><button type="submit" class="btn btn-danger">Delete</button></form>
        <a href="/" class="btn btn-primary">Return to Home</a>
    </div>
</div>